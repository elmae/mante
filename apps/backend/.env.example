# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
API_PREFIX=/api/v1
API_VERSION=1.0.0

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=cmms_user
DB_PASS=cmms_password2
DB_NAME=mante_dev
DB_SCHEMA=public
DB_SYNC=false
DB_SSL=false
DB_LOGGING=true

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=cmms_user
TEST_DB_PASS=cmms_password2
TEST_DB_NAME=mante_test

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,PATCH,DELETE
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE="Too many requests, please try again later"

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
MAX_FILES_PER_REQUEST=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX=1000

# Security Configuration
BCRYPT_ROUNDS=12
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=false

# Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs
SWAGGER_TITLE="CMMS API Documentation"
SWAGGER_DESCRIPTION="API documentation for the CMMS system"
SWAGGER_VERSION="1.0.0"

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health

# Development
ENABLE_DEBUG=false
DEBUG_PORT=9229
ENABLE_PRETTY_ERROR=true